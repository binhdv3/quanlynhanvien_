<h1>Danh Sách Nhân Viên{{title}}</h1>

<div class="mt-4">
    <div class="row">
          {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card item-product">
                <a href="/course/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">{{this.salary}}</p>
                    <a href="#" class="btn btn-primary">Đuổi việc</a>
                </div>
            </div>
        </div>
           {{/each}}
    </div>
</div>